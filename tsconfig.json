{
  "extends": "@salesforce/dev-config/tsconfig-strict",
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "src",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "@salesforce/kit": ["node_modules/@salesforce/kit"],
      "@salesforce/core": ["node_modules/@salesforce/core"]
    }
  },
  "include": ["./src/**/*.ts"]
}
